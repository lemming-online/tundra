{
  "version": "0.0.1",
  "configurations": [
    {
      "name": "Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/src"
    },
    {
      "name": "Firefox",
      "type": "firefox",
      "request": "launch",
      // "reAttach": true,
      "url": "http://localhost:3000/",
      "pathMappings": [
        {
          // This may not be needed, or it may be a bug
          // For some reason, Firefox is requesting the whole URLs, not ending in /
          "url": "http://localhost:3000/Users/jhankins/dev/lemming/tundra/",
          "path": "${workspaceFolder}/"
        },
        {
          "url": "webpack:///",
          "path": "${workspaceFolder}/"
        }
      ],
      "log": {
        "consoleLevel": {
          "PathConversion": "Info",
          "default": "Error"
        }
      }
    }
  ]
}
