{
  "version": "0.0.1",
  "configurations": [
    {
      "name": "Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/src"
    },
    {
      "name": "Firefox",
      "sourceMaps": "client",
      "type": "firefox",
      "request": "launch",
      // "reAttach": true,
      "url": "http://localhost:3000/",
      "webRoot": "${workspaceFolder}/src",
      "pathMappings": [
        {
          "url": "webpack:///",
          "path": "${workspaceFolder}/"
        }
      ],
      "log": {
        "consoleLevel": {
          "PathConversion": "Info",
          "default": "Error"
        }
      }
    }
  ]
}
